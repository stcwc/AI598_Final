from Util import Point, Graph, Obstacle, Environment
from Geometry import GetIntersection, NearestPoint
import random
from Parser import parse

def RRT(E,G):
	#add first vertex to graph
	new_vertex=Point(random.uniform(0, E.x_max),random.uniform(0, E.y_max))
	intersection=Point(new_vertex.x,new_vertex.y)
	for obs in E.obstacles:
		for index in range(obs.number-1):
			inter=GetIntersection(E.start,new_vertex,obs.IndexVertex[index+1],obs.IndexVertex[index+2])
			if inter!=Point(-1,-1):
				if ((intersection.x-E.start.x)**2+(intersection.y-E.start.y)**2)<((inter.x-E.start.x)**2+(inter.y-E.start.y)**2):
					intersection=intersection 
				else:
					intersection=intersection
		inter=GetIntersection(E.start,new_vertex,obs.IndexVertex[obs.number-1],obs.IndexVertex[obs.number])
		if ((intersection.x-E.start.x)**2+(intersection.y-E.start.y)**2)<((inter.x-E.start.x)**2+(inter.y-E.start.y)**2):
			intersection=intersection 
		else:
			intersection=intersection
	G.addVertex(intersection)
	G.addEdge((0,1))
	for i in range(100):
		new_vertex=Point(random.uniform(0, E.x_max),random.uniform(0, E.y_max))
		for edge in G.edges:
			nearest_point=NearestPoint(G.IndexVertex[edge[0]],G.IndexVertex[edge[0]])

E=parse("test.txt")
G=Graph(E.start)
